<script>
    $(document).ready(function () {
        $("div[name=chart]").each(function (i) {
            var ori_id = $(this).attr("id");
            var chart_id = $(this).attr("id");
            chart_id = chart_id.replace("chart_", "");
            var arr_id = chart_id.split("_");
            $.getJSON("/Home/GetUserStockPrices", { user_id: arr_id[0], stock_num: arr_id[1] }, function (data) {                
                var options = set_option_data(data.high, data.dates);
                var chart = new ApexCharts(document.getElementById(ori_id), options);
                chart.render();
            });
           
        });
    });
    function set_option_data(prices, time_series) {
        var options = {
            series: [{
                name: "Desktops",
                data: prices,

            }],
            chart: {

                width: 200,
                toolbar: {
                    show: false,
                },
                type: 'line',
                zoom: {
                    enabled: false
                }
            },
            dataLabels: {
                enabled: false
            },
            stroke: {
                curve: 'straight',
                width: 2                
            },
            grid: {
                show: false,
                row: {
                    colors: ['#f3f3f3', 'transparent'], // takes an array which will be repeated on columns
                    opacity: 0.5
                },
            },
            xaxis: {
                categories: time_series,
                labels: {
                    show: true,
                    
                },
                tooltip: {
                    enabled: false
                }
            },
            yaxis: {                
                labels: {
                    show: false
                }
            },
            tooltip: {
                enabled: false
            }


        };
        return options;
    }
