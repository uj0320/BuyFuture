<script src="https://cdnjs.cloudflare.com/ajax/libs/apexcharts/3.19.3/apexcharts.min.js"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/apexcharts/3.19.3/apexcharts.min.css" />
<script>
    $(document).ready(function () {
        $.getJSON("/Home/GetPrices", function (data) {
            gochart(data.highes, data.dates);
        });
    });

    function gochart(prices, time_series) {
        var options = {
            series: [{
                name: "Desktops",
                data: prices,
                
            }],
            chart: {
                
                width: 200,
                toolbar: {
                    show: false,
                },
                type: 'line',
                zoom: {
                    enabled: false
                }
            },
            dataLabels: {
                enabled: false
            },
            stroke: {
                curve: 'straight'
            },
            
            grid: {
                show: false,
                row: {
                    colors: ['#f3f3f3', 'transparent'], // takes an array which will be repeated on columns
                    opacity: 0.5
                },
            },
            xaxis: {
                categories: time_series,
                labels: {
                    show: false
                },
                tooltip: {
                    enabled: false
                }
            },
            yaxis: {
                
                labels: {
                    show: false
                }
            },
            
            

        };
        var divs = document.querySelectorAll('[name = "chart"]');
        divs.forEach(function (div) {
            var chart = new ApexCharts(div, options);
            chart.render();
        });
    }
</script>

