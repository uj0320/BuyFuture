<dir class="row">
    @foreach (var u in ViewBag.users)
    {
        <div class="panel panel-warning">
            <div class="panel panel-default">
                <!-- Default panel contents -->
                <div class="panel-heading">@u.Name</div>
                <div class="panel-body">
                    <p>...</p>
                </div>

                <!-- Table -->
                <table class="table">
                    <tr>
                        <th>#</th>
                        <th>關注股票</th>
                        <th></th>
                    </tr>
                    @{
                        int count = 1;
                    }
                    @foreach (var stock in u.UserStock)
                    {
                        <tr>
                            <td>@count</td>
                            <td><a href="/Home/StockDetails/@stock.StockNumNavigation.StockNum">@(stock.StockNumNavigation.StockName)(@stock.StockNumNavigation.StockNum)</a></td>
                            <td>
                                <div name="chart" id="chart_@(u.Id)_@stock.StockNum">

                                </div>
                            </td>
                        </tr>
                        count++;
                    }


                </table>
            </div>
        </div>
    }

</dir>
